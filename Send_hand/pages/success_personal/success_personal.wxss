
page{
  overflow: hidden;
}
.bg {
  height: 20rpx;
  width: 100%;
  border-bottom: 1rpx solid #e8e8e8;
}

.swiper-tab {
  width: 100%;
  border-bottom: 1rpx solid #e8e8e8;
  text-align: center;
  line-height: 80rpx;
  background: #fff;
}

.swiper-tab-list {
  font-size: 30rpx;
  display: inline-block;
  width: 49.5%;
  color: #bfbfbf;
  text-align: center;
}

.on1 {
  color: #000;
  border-right: 1rpx solid #e8e8e8;
}


.authText {
  margin: 0 auto;
  width: 60%;
  display: inline-block;
  font-size: 32rpx;
  letter-spacing: 5rpx;
}

.authTextOn {
  border-bottom: 5rpx solid #64cb97;
  color: #000;
}

/*身份认证+商户认证  */

.authBigBox {
  width: 100%;
  background-color: #ffffff;
}

.authBox {
  width: 60%;
  margin: 0 auto;
  text-align: center;
  padding: 0 0 40rpx 0;
}

.smallBox {
  display: inline-block;
}

.authComments {
  display: block;
  font-size: 30rpx;
}

.smallBg {
  width: 30%;
  border: 3rpx solid #64cb97;
  display: inline-block;
  margin: 0 5% 18%;
}

.authImg {
  width: 80rpx;
  height: 80rpx;
}

/*用户信息  */

.userBox {
  width: 100%;
  border-bottom: 1rpx solid #e8e8e8;
  font-size: 30rpx;
  background-color: #ffffff;
}

.userName {
  width: 80%;
  border-bottom: 1rpx solid #e8e8e8;
  margin: 0 auto;
  letter-spacing: 2rpx;
  padding: 30rpx 0;
}

.userId {
  border-bottom: none;
}

.userInput {
  width: 70%;
  display: inline-block;
  vertical-align: middle;
}

.userText {
  vertical-align: middle;
  margin-right: 45rpx;
  font-weight: 500;
}

/*  */
.Line{
  width: 100%;
  vertical-align: middle;
  display: inline-block;
  border-top: 30rpx solid #F8F8FA;
}
.information{
  width: 80%;
  margin: 0 auto;
}
.information_text{
  margin: 0 auto;
  line-height: 80rpx;
}
.information_text .name{
  font-size: 32rpx;
}
.information_text .text{
  font-size: 32rpx;
  color: #888888;
}
.information_text image{
  width: 171rpx;
  height: 141rpx;
  position:absolute;
  z-index: 9;
  margin-top: -10px;
}
.information_id {
  font-size: 32rpx;
  color: #000000;
  display: inline-block;
  vertical-align: middle;
  margin-top: 10rpx;
}
.information_img{
  margin-top: 50rpx;
  width: 100%;
}
.information_img .img_1{
  width: 300rpx;
  height: 162rpx;
  display: inline-block;
  vertical-align: middle;
}
.information_img .img_2{
  width: 300rpx;
  height: 162rpx;
  display: inline-block;
  vertical-align: middle;
}