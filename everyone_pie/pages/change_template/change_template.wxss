/* pages/change_template/change_template.wxss */

/*title  */

.textTitle {
  font-size: 32rpx;
  color: #b3b3b3;
  display: block;
  padding: 20rpx 0 15rpx 0;
}

/*图片之间的间距  */

.interspace {
  display: inline-block;
  width: 7%;
}

/*整个大盒子  */

.bigBox {
  width: 100%;
  background-color: #f4f4f4;
  margin: 0;
  padding: 0
}

/*装图片和文字的整个盒子  */

.secondBox {
  width: 90%;
  margin: 0 5% 0 5%;
  background-color: #f4f4f4;
}

/*装图片和文字的小盒子  */

.viewBox {
  width: 45%;
  display: inline-block;
}

/*所有的图片样式  */

.imgAll {
  width: 100%;
}

/*所有的文字样式  */

.textAll {
  display: inline-block;
  width: 100%;
  text-align: center;
  font-size: 32rpx;
  color: #b3b3b3;
  margin-bottom: 15rpx;
  background-color: #f4f4f4;
}

/*隔断线样式  */

.hrClass {
  display: inline-block;
  width: 44%;
  border: 1rpx solid #878787;
}

.marginLeft {
  margin-left: 36rpx;
}

/*隔断线中间的图标  */

.bgImg {
  width: 5%;
  height: 30rpx;
  display: inline-block;
  vertical-align: middle;
  margin: 0 10rpx;
}

.icoImg {
  width: 100%;
  height: 100%;
}

/*模板选择样式  */

.changeTemplate {
  width: 40%;
  display: inline-block;
  margin-left: 23rpx;
  margin-top: 25rpx;
}

.marginRight {
  margin-right: 50rpx;
}

.templateClass {
  width: 100%;
  height: 265rpx;
  border: 1px solid #bebebe;
  background-color: #ffffff;
}

.templateText {
  background-color: #f4f4f4;
  display: inline-block;
  width: 100%;
  text-align: center;
  font-size: 32rpx;
  color: #8B8B8B;
}
/*选择模板按钮  */
.templateBtnBox{
  margin-top: 60rpx;
  width: 100%;
  background-color: #ffffff;
  height: 135rpx;padding-top: 35rpx;
}
.templateBtn{
  width: 90%;
  background-color: #09BA07;
  color: #ffffff;
}