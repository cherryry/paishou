/* pages/profile/profile.wxss */

/*清除浮动*/

.clearfix:after {
  clear: both;
}

.clearfix:before, .clearfix:after {
  content: "";
  display: table;
  visibility: hidden;
}

.fl {
  float: left;
}

.fr {
  float: right;
}
.nullImg{
  width: 32rpx;
  height: 32rpx;
  vertical-align: middle;
  margin-top: 10rpx;
  margin-right: 7rpx;
}

/*个人中心区  */

.profileBox {
  position: relative;
  height: 310rpx;
  width: 100%;
}

.profileBg {
  position: absolute;
  margin-top: -10rpx;
  width: 100%;
  height: 310rpx;
}

.profilePortrait {
  position: absolute;
  width: 120rpx;
  height: 120rpx;
  left: 50%;
  margin-left: -60rpx;
  margin-top: 40rpx;
}

.textBox {
  position: absolute;
  top: 180rpx;
  text-align: center;
  width: 100%;
  color: #fff;
}

.text1 {
  display: block;
  font-size: 32rpx;
  letter-spacing: 5rpx;
  margin-bottom: 10rpx;
  font-weight: 500;
}

.vipLogo {
  width: 36rpx;
  height: 26rpx;
}

.text2 {
  display: block;
  font-size: 24rpx;
}

.bg {
  margin-top: -10rpx;
  background-color: rgb(247, 249, 248);
  height: 20rpx;
  width: 100%;
}

/*container  */

.container {
  width: 90%;
  margin: 0 auto;
}

/*发布 接受  */

.releaseBox {
  width: 49%;
  text-align: center;
  display: inline-block;
  font-size: 32rpx;
  letter-spacing: 1rpx;
  margin-bottom: 25rpx;
}

.release {
  display: block;
  margin: 20rpx 0;
}

.few {
  display: block;
  color: rgb(6, 191, 2);
}

/*中间间隔线  */

.borderL {
  display: inline-block;
  width: 3rpx;
  height: 60rpx;
  background-color: rgb(207, 207, 207);
}

/*钱包卡卷...  */

.listBox {
  padding: 25rpx 0;
  width: 100%;
  margin: 0 auto;
  line-height: 69rpx;
  border-bottom: 1rpx solid rgb(228, 228, 228);
  display: inline-block;
  vertical-align: middle;
}

.walletImg {
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
  margin-right: 15rpx;
}

.myWallet {
  font-size: 32rpx;
  letter-spacing: 2rpx;
  vertical-align: middle;
  display: inline-block;
  padding-top: 10rpx;
}

.money {
  display: inline-block;
  text-align: right;
  margin-right: 15rpx;
  font-size: 24rpx;
  color: rgb(199, 199, 199);
  margin-top: 10rpx;
  vertical-align: middle;
}

/*箭头  */

.arrow {
  width: 25rpx;
  height: 30rpx;
  vertical-align: middle;
  padding-top: 10rpx;
}

.borderB {
  height: 20%;
  border-bottom: 1rpx solid rgb(228, 228, 228);
}
