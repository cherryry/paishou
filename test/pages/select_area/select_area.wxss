/* pages/select_area/select_area.wxss */

.box {
  width: 100%;
  height: 100%;
}

.smallBox {
  padding-top: 40rpx;
  line-height: 38rpx;
  padding-bottom: 35rpx;
  width: 90%;
  margin: 0 auto;
}

.box .hrBox {
  width: 100%;
  margin-left: 5%;
}

image {
  width: 38rpx;
  height: 38rpx;
  margin-right: 20rpx;
  vertical-align: middle;
}

.areaCity {
  display: inline-block;
  font-size: 35rpx;
  letter-spacing: 3rpx;
  vertical-align: middle;
}

.search {
  display: inline-block;
  width: 70%;
  margin-left: 5%;
  background-color: #e1e1e1;
  border-radius: 23rpx;
  text-indent: 5rpx;
  vertical-align: middle;
}

.phindent {
  padding-left: 21rpx;
  font-size: 26rpx;
}

.hr {
  display: inline-block;
  width: 69%;
  margin-left: 4%;
  background-color: #e1e1e1;
  vertical-align: middle;
  height: 0.1rpx;
}

.btnBox_add {
  width: 80%;
  margin: 0 auto;
  text-align: center;
}

.btnBox {
  width: 100%;
  margin: 30rpx auto;
}

.btnBox button {
  display: inline-block;
  width: 30%;
  height: 68rpx;
  line-height: 68rpx;
  font-size: 28rpx;
  padding: 0;
}

.btnBox .btnR {
  margin-left: 24rpx;
}

.button-hover {
  background-color: #64cb97;
  color: #fff;
}

.hr2 {
  display: inline-block;
  width: 60%;
  margin-left: 4%;
  background-color: #e1e1e1;
  vertical-align: middle;
  height: 0.1rpx;
}
