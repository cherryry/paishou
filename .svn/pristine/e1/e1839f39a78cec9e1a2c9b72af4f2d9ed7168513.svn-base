page{
  overflow: hidden;
}
.grad { 
 background: -webkit-linear-gradient(#7396ad, #64cb97); /* Safari 5.1 - 6.0 */
 background: -o-linear-gradient(#7396ad, #64cb97); /* Opera 11.1 - 12.0 */ 
 background: -moz-linear-gradient(#7396ad, #64cb97); /* Firefox 3.6 - 15 */ 
 background: linear-gradient(#7396ad, #64cb97); /* 标准的语法 */ 
 height: 100vh;
 padding:30rpx;
}
.content{  
  width: 100%; 
  height: 93%;
  background: #ffffff;
  border-radius: 15rpx;
  margin: 0 auto;
  overflow-y:hidden;
  padding-top: 30rpx;
}
.column{
  width: 90%; 
  margin: 0 auto;
  border-bottom: 1rpx solid #ebebeb;
  height: 100rpx;
  line-height: 100rpx;
}
.column .column_left{
  display: inline-block;
  vertical-align: middle;
  font-size: 28rpx;
}
.column .column_right{
  display: inline-block;
  vertical-align: middle;
  font-size: 28rpx;
}
.column .column_time{
  display: inline-block;
  vertical-align: middle;
  width: 200rpx;
  font-size: 28rpx;
}
.column .radio-group{
  display: inline-block;
  vertical-align: middle;
  font-size: 28rpx;
}
.column .radio-group .radio{
  margin-right: 50rpx;
  color: #888888;
}
.details{
  width: 90%; 
  margin: 0 auto;
  font-size: 30rpx;
  padding-top: 30rpx;
  color: #888888;
}
.code{
  width: 627rpx;
  height: 627rpx;
  margin: 0 auto;  
  text-align: center;
}
.code image{
  padding-top: 20rpx;
  width: 427rpx;
  height: 427rpx;
}