/* pages/post_message/post_message.wxss */

page {
  background-color: #f4f4f4;
}

.bgBox {
  background-color: #fff;
  border-bottom: 1rpx solid #e3e3e3
}

.bg {
  width: 100%;
  height: 24rpx;
  background-color: #f4f4f4;
  border-bottom: 1px solid #e3e3e3;
}

/*inputTitle placeholder  */

.inputTitle_placeholder {
  color: #888;
  font-size: 34rpx;
  font-weight: 550;
}

.inputContent_placeholder {
  font-size: 28rpx;
}

.inputTitle {
  color: #8d8d8d;
  height: 119rpx;
  border-bottom: 1px solid #e3e3e3;
}

.inputAll {
  width: 90%;
  margin: 0 30rpx 0 40rpx;
  border-bottom: 1px solid #e3e3e3;
}

.inputContent {
  padding-top: 15rpx;
  border-bottom: 1px solid #e3e3e3;
}

.btn {
  width: 90%;
  margin-top: 20%;
  background-color: #64cb97;
  color: #fff;
}

.whiteBg {
  background-color: #fff;
}

.inputHref {
  height: 118rpx;
  color: #bbb;
}

/*inputHref placeholder  */

.bigbg {
  width: 100%;
  background-color: #f4f4f4;
}
.imgTextBox{
  width: 90%;
  text-align: right;
  padding: 20rpx 0;
}
.textareaImg {
  width: 32rpx;
  height: 32rpx;
  vertical-align: middle;
  letter-spacing: 2rpx;
}

.textareaText {
  color: #64cb97;
  font-size: 26rpx;
  vertical-align: middle;
  margin-left: 15rpx;
}
.textWidth{
  width: 24%;
  display: inline-block
}
.textWidth2{
  width: 27%;
}
/*locationImg*/
.locationImg{
  height: 38rpx;
  width: 30rpx;
  vertical-align: middle
}
.locationImg3{
  height: 29rpx;
  width: 14rpx;
  vertical-align: middle
}
.locationImg2{
  height: 42rpx;
  width: 42rpx;
  vertical-align: middle;
}
.secondBox{
  font-size: 32rpx;
  background-color: #fff;
  width: 100%;
  margin-top: 25rpx;
  border-top: 1rpx solid #e3e3e3;
  border-bottom: 1rpx solid #e3e3e3;
  
}
.selecArea{
  width: 90%;
  margin: 0 auto;
  padding: 20rpx 0;
  letter-spacing: 2rpx;
  border-bottom: 1rpx solid #e3e3e3;
  color: #353535
}
.selecArea2{
  border-bottom: none
}
.selecAreaBox{
  display: inline-block;
  width: 76%;
  text-align: right;
  color: #888888;
}
.selecAreaBox2{
  width: 65%;
}
.locationText{
  vertical-align: middle;
  margin-left: 5rpx;
