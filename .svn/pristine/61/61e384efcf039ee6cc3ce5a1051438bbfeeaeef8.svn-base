/* pages/grab/grab.wxss */

/*两个字的style  */

.br {
  border-right: 1rpx solid #e9e9e9;
}

.ml {
  margin-left: 20%;
}

.bg {
  width: 100%;
  height: 20rpx;
  background-color: #efeff4;
  margin-top: -5rpx;
}

.allBox.mn {
  margin-left: 0;
}

/*banner  */

.postionBox {
  position: relative;
  height: 360rpx;
  text-align: center;
}

.banner {
  width: 100%;
  height: 360rpx;
  position: absolute;
  top: 0;
  z-index: -2;
}

.introductionImg {
  width: 420rpx;
  height: 250rpx;
  position: absolute;
  top: 50%;
  margin-top: -125rpx;
  left: 50%;
  margin-left: -210rpx;
  z-index: -1;
}

.introductionText {
  font-size: 30rpx;
  font-weight: 600;
  width: 100%;
  display: inline-block;
}

.introductionTextF {
  font-size: 30rpx;
  font-weight: 600;
  width: 100%;
  display: inline-block;
  margin-top: 12%;
}

.introductionText1 {
  display: -webkit-box;
  height: auto;
  width: 380rpx;
  overflow: hidden;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin: 0 auto;
  letter-spacing: 2rpx;
}

.hx {
  width: 56rpx;
  height: 4rpx;
  background-color: #64cb97;
  margin: 0 auto;
  margin-top: 23rpx;
}

.introductionTime {
  display: block;
  font-size: 28rpx;
  font-weight: 300;
  margin-top: 3%;
}

/*bottomTitle  */

.bottomTitleBox {
  font-size: 26rpx;
  padding: 15rpx 0;
  border-top: 1rpx solid #e9e9e9;
}

.bottomTitle {
  width: 85%;
  margin: 0 auto;
  border-bottom: 1rpx solid #e9e9e9;
  padding: 15rpx 0;
  color: #888;
}

.bottomTitle view {
  display: inline-block;
  width: 49.8%;
  height: 47rpx;
}

.howText {
  margin-left: 5rpx;
  color: #646d98;
}

.moneyText {
  margin-left: 30rpx;
  letter-spacing: 3rpx;
  color: #6dcd9f;
}

.modeBox {
  width: 85%;
  margin: 0 auto;
  padding: 15rpx 0;
  color: #888;
}

.interactive {
  text-align: right;
  display: inline-block;
  width: 76%;
  vertical-align: middle;
  color: #646d98;
}

.arrow {
  width: 25rpx;
  height: 25rpx;
  vertical-align: middle;
  margin-left: 2%;
}

/*内容介绍  */

.content {
  display: block;
  width: 85%;
  font-size: 24rpx;
  margin: 0 auto;
  padding: 20rpx 0;
  letter-spacing: 2rpx;
}

.contentBox {
  width: 100%;
  border-bottom: 1rpx solid #e9e9e9;
}

/*点赞评论转发  */

.t-l-c-f-box {
  width: 85%;
  margin: 0 auto;
}

.allBox {
  display: inline-block;
  width: 15%;
  margin-left: 12%;
}

.ico-img {
  width: 47rpx;
  height: 40rpx;
  vertical-align: middle;
}

.ico-text {
  margin-left: 5rpx;
  font-size: 24rpx;
  vertical-align: middle;
  color: #888;
}

/*优惠券  */

.couponBox {
  width: 100%;
  background-color: #f0eff4;
  height: 235rpx;
  position: relative;
  z-index: 1;
  margin-top: 20rpx;
}

.coupon {
  width: 95%;
  margin: 0 auto;
  padding-top: 25rpx;
  position: relative;
  z-index: 2;
}

.couponImg {
  width: 100%;
  height: 200rpx;
  position: absolute;
}

.couponContent {
  position: absolute;
  z-index: 3;
  height: 200rpx;
  width: 100%;
}

.btn {
  background-color: #fff;
  border-radius: 5rpx;
  font-size: 24rpx;
  width: 160rpx;
  height: 50rpx;
  position: absolute;
  display: inline-block;
  top: 50%;
  margin-top: -35rpx;
  opacity: 0.6;
  font-weight: bolder;
  text-align: center;
  left: 70%;
}

.symbol {
  position: absolute;
  top: 45%;
  margin-top: -20rpx;
  left: 10%;
  font-size: 32rpx;
  font-weight: lighter;
}

.moneyMany {
  position: absolute;
  left: 15%;
  top: 1%;
  font-size: 100rpx;
  font-weight: lighter;
  letter-spacing: 0;
}

.condition {
  font-size: 18rpx;
  position: absolute;
  top: 23%;
  left: 33%;
}

.couponText {
  position: absolute;
  top: 35%;
  left: 33%;
  font-size: 24rpx;
}

.couponTime {
  font-size: 20rpx;
  position: absolute;
  top: 60%;
  left: 10%;
}

/*进入主页  */

.icoBox-vip {
  display: inline-block;
  width: 30%;
  text-align: center;
}

.icoImg {
  margin-top: 10rpx;
  width: 100rpx;
  height: 100rpx;
}

.icoBoxText {
  display: inline-block;
  font-size: 28rpx;
  width: 56%;
  margin-left: 10%;
}

.vipLogo {
  width: 28rpx;
  height: 28rpx;
}

.centerBox {
  width: 40%;
  display: inline-block;
}

.grabManyBox {
  font-size: 26rpx;
  color: #888;
  letter-spacing: 5rpx;
  margin-left: 20%;
  margin-bottom: 7%;
}

.grabMany {
  color: #000;
}

.grabScheam {
  color: #6372a9;
}

.rightBox {
  width: 30%;
  display: inline-block;
}

.rightBoxBtn {
  width: 156rpx;
  height: 48rpx;
  font-size: 24rpx;
  color: #6372a9;
  border: 1rpx solid #6372a9;
  line-height: 41rpx;
  border-radius: 0;
  margin-bottom: 20%;
}

.grabBtn {
  width: 100%;
  border-radius: 0;
  background-color: #64cb97;
  color: #fff;
  letter-spacing: 5rpx;
}
