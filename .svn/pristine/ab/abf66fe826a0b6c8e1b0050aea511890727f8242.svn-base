.con_details{
  width: 100%;
  height: 130rpx;
  border-bottom: 30rpx solid #f8f8fa;
}
.details_top{
  width: 90%;
  margin: 0 auto;
  line-height: 130rpx;
  padding-bottom: 20rpx;
}
.details_top .title{
  font-size: 32rpx;
  width: 50%;
  display: inline-block;
  vertical-align: middle;
}
.details_top .number{
  font-size: 40rpx;
  width: 50%;
  text-align: right;
  display: inline-block;
  vertical-align: middle;
  color: #64cb97;
}
.list_top{
  width: 90%;
  margin: 0 auto;
  border-bottom: 1px solid #eaeaea;
  padding: 40rpx 0 40rpx 0;
}
.list_top .title{
  font-size: 30rpx;
  width: 50%;
  display: inline-block;
  vertical-align: middle;
  color: #888888;
}
.list_top .state{
  font-size: 30rpx;
  width: 50%;
  text-align: right;
  display: inline-block;
  vertical-align: middle;
  color: #576b95;
}
.list_top .number{
  font-size: 30rpx;
  width: 50%;
  text-align: right;
  display: inline-block;
  vertical-align: middle;
  color: #888888;
}