.grad { 
 background: -webkit-linear-gradient(#7396AD, #64CB96); /* Safari 5.1 - 6.0 */
 background: -o-linear-gradient(#7396AD, #64CB96); /* Opera 11.1 - 12.0 */ 
 background: -moz-linear-gradient(#7396AD, #64CB96); /* Firefox 3.6 - 15 */ 
 background: linear-gradient(#7396AD, #64CB96); /* 标准的语法 */ 
 height: 100vh;
}
.voucher{
  padding-top: 50rpx; 
  width: 94%;
  margin: 0 auto; 
}
.voucher_top{
  background: #ffffff;
  height: 615rpx;
