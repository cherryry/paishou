/*顶部  */

/*已使用的遮罩*/
page{
  color: #353535
}
.isUsedBox {
  width: 95%;
  position: absolute;
  z-index: 99;
  height: 235rpx;
  left: 50%;
  margin-left: -48.4%;
  top: 10%;
}

.isUsedBox .isUsed {
  width:100%;
  height: 212rpx;
}
.isUsedBox .isUsed2{
  width: 114rpx;
  height: 96rpx;
  top:-222rpx;
  position: relative; 
}

.isUsedBox .isUsedText {
  position: absolute;
  transform: rotate(-45deg);
  color: #ffffff;
  font-size: 22rpx;
  letter-spacing: 3rpx;
  top: 10%;
  left: 1%;
  z-index: 9999;
  font-weight: 300;
}

.swiper-tab {
  width: 100%;
  border-top: 1rpx solid #e2e2e2;
  border-bottom: 1rpx solid #e2e2e2;
  text-align: center;
  height: 80rpx;
  line-height: 76rpx;
  background: #fff;
}

.swiper-tab-list {
  font-size: 30rpx;
  display: inline-block;
  width: 30%;
  color: #777;
  text-align: center;
  letter-spacing: 2rpx
}

.on {
  border-bottom: 5rpx solid #64cb97;
}

/*优惠券  */

.couponBox {
  width: 100%;
  background-color: #f8f8fa;
  height: 235rpx;
  position: relative;
}

.coupon {
  width: 95%;
  margin: 0 auto;
  padding-top: 25rpx;
  position: relative;
}

.couponImg {
  width: 100%;
  height: 232rpx;
  position: absolute;
}

.couponContent {
  position: absolute;
  z-index: 3;
  height: 200rpx;
  width: 100%;
  top: 40rpx;
}


.btn {
  background-color: #fff;
  border-radius: 5rpx;
  font-size: 24rpx;
  width: 160rpx;
  height: 50rpx;
  position: absolute;
  display: inline-block;
  top: 50%;
  opacity: 0.6;
  text-align: center;
  left: 70%;
  margin-top: -34rpx;
  line-height: 50rpx;
}
.btn::after{
   border: none
}

.symbol {
  position: absolute;
  top: 41%;
  margin-top: -20rpx;
  left: 10%;
  font-size: 32rpx;
  font-weight:300;
  height: 47rpx;
  width: 26rpx;
}

.symbol2 {
  position: absolute;
  top: 50%;
  margin-top: -20rpx;
  left: 29%;
  font-size: 20rpx;
  font-weight: normal;
}

.moneyMany {
  position: absolute;
  left: 15%;
  top: 1%;
  font-size: 100rpx;
  font-weight: 300;
  letter-spacing: 0;
}

.moneyMany2 {
  position: absolute;
  left: 9%;
  top: 1%;
  font-size: 100rpx;
  font-weight: lighter;
  letter-spacing: 0;
}

.condition {
  font-size: 22rpx;
  position: absolute;
  top: 20%;
  left: 30%;
}

.couponText {
  position: absolute;
  top: 38%;
  left: 30%;
  font-size: 28rpx;
}

.couponText2 {
  position: absolute;
  top: 35%;
  left: 33%;
  font-size: 28rpx;
}

.couponTime {
  font-size: 20rpx;
  position: absolute;
  top: 70%;
  left: 10%;
  letter-spacing: 1rpx;
}
